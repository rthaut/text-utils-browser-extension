{
  "name": "__MSG_AppName__",
  "short_name": "__MSG_AppShortName__",
  "description": "__MSG_AppDescription__",
  "version": "1.0.0",
  "manifest_version": 2,
  "default_locale": "en",
  "icons": {
    "16": "images/icon-16.png",
    "128": "images/icon-128.png"
  },
  "background": {
    "scripts": [
      "scripts/background.js"
    ]
  },
  "browser_action": {
    "default_icon": {
      "19": "images/icon-19.png",
      "38": "images/icon-38.png"
    },
    "default_title": "__MSG_BrowserActionTitle__"
  },
  "options_ui": {
    "__chrome__page": "pages/options.html?vendor=chrome",
    "__edge__page": "pages/options.html?vendor=edge",
    "__firefox__page": "pages/options.html?vendor=firefox",
    "open_in_tab": false
  },
  "content_scripts": [
    {
      "matches": [
        "http://*/*",
        "https://*/*"
      ],
      "js": [
        "scripts/content-script.js"
      ],
      "run_at": "document_end",
      "all_frames": false
    }
  ],
  "permissions": [
    "activeTab",
    "clipboardWrite",
    "contextMenus",
    "notifications",
    "storage"
  ],
  "__chrome__minimum_chrome_version": "51.0",
  "__firefox__applications": {
    "gecko": {
      "id": "text-utils-browser-extension@ryan.thaut.me",
      "strict_min_version": "62.0"
    }
  }
}